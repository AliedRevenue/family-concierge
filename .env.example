# Family Concierge Agent - Environment Configuration

# Google OAuth Credentials
# Obtain from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/oauth/callback

# Database
DATABASE_PATH=./data/fca.db

# Agent Configuration
CONFIG_PATH=./config/agent-config.yaml
AGENT_MODE=copilot  # copilot | autopilot | dry-run

# Logging
LOG_LEVEL=info  # error | warn | info | debug
LOG_FILE=./logs/fca.log

# Processing
MAX_EMAILS_PER_RUN=50
FIRST_RUN_LOOKBACK_DAYS=14
RUN_INTERVAL_MINUTES=15

# Deduplication
DEDUPLICATION_WINDOW_DAYS=14

# Timezone (IANA format)
DEFAULT_TIMEZONE=America/Los_Angeles
